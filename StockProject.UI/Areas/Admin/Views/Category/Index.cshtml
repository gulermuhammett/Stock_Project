@using StockProject.Entities.Entities;
@model IEnumerable<StockProject.Entities.Entities.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}


<!-- /# column -->
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">
                                    <div class="align-items-lg-end" >
                                        <strong class="card-title">Kategori Listesi</strong>
                                         <a class="btn btn-secondary ms-4" asp-controller="Category" asp-action="AddCategory">Kategori Ekle</a>
                                        
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="custom-tab">

                                        <nav>
                                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                                <a class="nav-item nav-link active" id="custom-nav-home-tab" data-toggle="tab" href="#custom-nav-home" role="tab" aria-controls="custom-nav-home" aria-selected="true">Tüm Kategoriler</a>
                                                <a class="nav-item nav-link" id="custom-nav-profile-tab" data-toggle="tab" href="#custom-nav-profile" role="tab" aria-controls="custom-nav-profile" aria-selected="false">Aktif Kategoriler</a>
                                               
                                            </div>
                                        </nav>
                                        <div class="tab-content pl-3 pt-2" id="nav-tabContent">
                                            <div class="tab-pane fade show active" id="custom-nav-home" role="tabpanel" aria-labelledby="custom-nav-home-tab">
                                                 <div class="card">
                            <div class="card-header">
                               
                               
                                
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Kategori Adı</th>
                                            <th>Açıklama</th>
                                            <th>İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       
                                            @{
                                             int rowcountt = 1;
                                             }
                                            @foreach (Category item in Model)
                                            {
                                                <tr>
                                                    <th scope="row">@rowcountt</th>
                                                    <td>@item.CategoryName</td>
                                                    <td>@item.Description</td>
                                                    <td>
                                                        <a asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Güncelle</a>
                                                    @if (item.IsActive)
                                                    {
                                                         <a asp-area="Admin" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                                                        
                                                    }
                                                    else
                                                    {
                                                        <a asp-area="Admin" asp-controller="Category" asp-action="ActivetedCategory" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Aktifleştir</a>
                                                        
                                                    }

                                                 </td>   
                                </tr>
                                rowcountt++;
                            }
                                        
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                                            </div>
                                            <div class="tab-pane fade" id="custom-nav-profile" role="tabpanel" aria-labelledby="custom-nav-profile-tab">
                                                 <div class="card">
                            <div class="card-header">
                               
                               
                                
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Kategori Adı</th>
                                            <th>Açıklama</th>
                                            <th>İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       
                                            @{
                                             int rowcount2 = 1;
                                             }
                                            @foreach (Category item in Model)
                                            {
                                                if (item.IsActive)
                                                {
                                                    <tr>
                                                        <th scope="row">@rowcount2</th>
                                                        <td>@item.CategoryName</td>
                                                        <td>@item.Description</td>
                                                        <td>
                                                            <a asp-area="Admin" asp-controller="Category" asp-          action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Güncelle</a>

                                                        <a asp-area="Admin" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                                                        </td>
                                                    
                                                    </tr>
                                                    rowcount2++;
                                                }
                                            }

                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                                            </div>
                                            
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /# column -->
