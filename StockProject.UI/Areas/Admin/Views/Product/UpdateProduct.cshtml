@model UpdateProductDTO


@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}
<div class="col-lg-6 offset-3">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Ürün</strong>
                            </div>
                            <div class="card-body">
                                <!-- Credit Card -->
                                <div id="pay-invoice">
                                    <div class="card-body">
                                        <div class="card-title">
                                            <h3 class="text-center">Ürün Güncelle</h3>
                                        </div>
                                        <hr>
                                        <form asp-action="UpdateProduct" method="post" novalidate="novalidate">
                                             <input type="hidden" asp-for="ProductId"/>
                                            <div class="form-group">
                                                <label asp-for="product.ProductName"  class="control-label mb-1">Ürün Adı</label>
                                                <input asp-for="product.ProductName"  type="text" class="form-control" aria-required="true" aria-invalid="false" >
                                            </div>
                                            <div class="form-group has-success">
                                                <label  asp-for="product.UnitPrice"  class="control-label mb-1">Birim Fiyat</label>
                                                <input  asp-for="product.UnitPrice" type="number" class="form-control cc-name valid">
                                               
                                            </div>
                                            <div class="form-group has-success">
                                                <label  asp-for="product.Stock"  class="control-label mb-1">Stok</label>
                                                <input  asp-for="product.Stock" type="number" class="form-control cc-name valid">
                                               
                                            </div>
                                             <div class="form-group has-success">
                                                <label  asp-for="product.ExpireDate"  class="control-label mb-1">Son Kullanma Tarihi</label>
                                                <input  asp-for="product.ExpireDate" type="datetime" class="form-control cc-name valid">
                                               
                                            </div>
                                            <div class="form-group has-success">
                                                 <label asp-for="product.IsActive">Available:</label>
                                            <select  asp-for="product.IsActive" class="form-control">
                                                <option value="False">No</option>
                                                <option value="True">Yes</option>
                                            </select>
                                            </div>

                                            <div class="form-group has-success">
                                             <label asp-for="CategoryId"></label>
                                                <select asp-for="CategoryId" asp-items="@(new SelectList(Model.categories, "Id", "CategoryName"))" class="form-control">
                                                <option value="">Kategori Seçiniz</option>
                                                </select>
                                            </div>
                                            <div class="form-group has-success">
                                             <label asp-for="SupplierId"></label>
                                                <select asp-for="SupplierId" asp-items="@(new SelectList(Model.suppliers, "Id", "SupplierName"))" class="form-control">
                                                <option value="">Tedarikçi Seçiniz</option>
                                                </select>
                                            </div>
                                                <button type="submit" class="btn btn-lg btn-info btn-block">
                                                    <i class="fa fa-lock fa-lg"></i>&nbsp;
                                                    <span id="payment-button-amount">Ürün Güncelle</span>
                                                    <span id="payment-button-sending" style="display:none;">Sending…</span>
                                                </button>
                                            
                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div> <!-- .card -->

                    </div><!--/.col-->


